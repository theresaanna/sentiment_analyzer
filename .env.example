# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here

# Application Settings
MAX_COMMENTS_PER_VIDEO=100
CACHE_TIMEOUT=300

# Database (default SQLite file)
# DATABASE_URL=sqlite:///app.db

# Redis Configuration (optional but recommended for performance)
# Local Redis (default)
REDIS_URL=redis://localhost:6379/0

# For Redis Cloud or other hosted Redis:
# REDIS_URL=redis://username:password@hostname:port/0
# Example for Redis Cloud:
# REDIS_URL=redis://default:password@redis-12345.c1.us-east-1.ec2.cloud.redislabs.com:12345

# Cache TTL Settings (in hours)
REDIS_CACHE_TTL_HOURS=24  # How long to cache video info
REDIS_COMMENTS_TTL_HOURS=6  # How long to cache comments (shorter as they change more)

# Payments - Stripe
# STRIPE_SECRET_KEY=sk_live_or_test_key
# STRIPE_PRICE_ID=price_XXXXXXXXXXXX  # $10 monthly
# STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXX

# Email Configuration (for password reset)
# For Gmail: Enable 2FA and use App Password
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USE_SSL=False
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# Google OAuth (Login)
# Obtain credentials from Google Cloud Console -> APIs & Services -> Credentials
# Authorized redirect URI (dev): http://localhost:8000/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Optional: override auto-generated redirect URI
# OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback
