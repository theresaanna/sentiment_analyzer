{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python310", "gcc", "postgresql"]
        },
        "install": {
          "cmds": [
            "pip install --upgrade pip",
            "pip install -r requirements.txt",
            "echo 'Dependencies installed. Using Modal ML service for sentiment analysis.'"
          ]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
"startCommand": "sh -c \"gunicorn --bind 0.0.0.0:${PORT:-8000} --timeout 120 --workers 1 --threads 1 --worker-class sync --preload --log-level info --access-logfile - run:app\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
"healthcheckPath": "/",
    "healthcheckTimeout": 120,
    "region": "us-west1"
  },
  "variables": {
    "$schema": "https://railway.app/variables.schema.json",
    "MODAL_ML_BASE_URL": {
      "description": "Modal ML service endpoint URL",
      "default": "https://theresaanna--sentiment-ml-service-fastapi-app.modal.run"
    },
    "PRECOMPUTE_ANALYSIS_ON_PRELOAD": {
      "description": "Precompute analysis for faster results",
      "default": "true"
    },
    "PRELOAD_ANALYSIS_LIMIT": {
      "description": "Number of items to preload",
      "default": "500"
    },
    "PRELOAD_ANALYSIS_METHOD": {
      "description": "Method to use for preloading",
      "default": "auto"
    }
  }
}