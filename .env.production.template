# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-production-secret-key-here-CHANGE-THIS

# Database (Railway provides DATABASE_URL automatically)
# DATABASE_URL will be injected by Railway

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here

# Modal ML Service Configuration
MODAL_ML_BASE_URL=https://theresaanna--sentiment-ml-service-fastapi-app.modal.run
# MODAL_ML_API_KEY=  # Optional, add if you implement authentication
PRECOMPUTE_ANALYSIS_ON_PRELOAD=true
PRELOAD_ANALYSIS_LIMIT=500
PRELOAD_ANALYSIS_METHOD=auto

# Redis Configuration (Railway provides REDIS_URL if you have Redis service)
# REDIS_URL will be injected by Railway if Redis service is attached
REDIS_CACHE_TTL_HOURS=24
REDIS_COMMENTS_TTL_HOURS=6

# Application Settings
MAX_COMMENTS_PER_VIDEO=10000
CACHE_TIMEOUT=300

# Batch Processing Configuration
BATCH_PROCESSING_ENABLED=True
DEFAULT_BATCH_SIZE=32
MAX_BATCH_SIZE=128
MIN_BATCH_SIZE=8
DYNAMIC_BATCHING_ENABLED=True

# Performance (adjusted for production)
MAX_WORKERS=2
PREFETCH_SIZE=2
BUFFER_SIZE=100
FLUSH_INTERVAL=1.0

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PRICE_ID=your-stripe-price-id-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Google OAuth (for login)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Server Configuration (Railway provides these)
# SERVER_NAME will be set by Railway
# APPLICATION_ROOT=/
# PREFERRED_URL_SCHEME=https